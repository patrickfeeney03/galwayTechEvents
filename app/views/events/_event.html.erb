<article>
    <div id="<%= dom_id event %>">
        <h2><%= event.title %></h2>
        <p>WHEN: <%= Time.zone.parse(event.date) if event.date? %></p>
        <p>WHERE: <%= event.location %></p>
        <p>WHAT: <%= event.body %></p>
        <%= image_tag event.image if event.image.persisted? %>
    </div>
</article>
