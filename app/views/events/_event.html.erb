<article>
    <div id="<%= dom_id event %>">
        <h2><%= event.title %></h2>
        <%= image_tag event.image if event.image.persisted? %>
        <p>WHEN: <%= Time.parse(event.date).strftime("%d/%m/%Y at %H:%M") unless event.date.nil? %></p>
        <p>WHERE: <%= event.location %></p>
        <p>WHAT: <%= event.body %></p>
    </div>
</article>
